@model List<AppView.Models.GiaoDichTienMaHoa>

<h2>Danh sách giao dịch tiền mã hóa</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên Người Gửi</th>
            <th>Tên Người Nhận</th>
            <th>Loại Tiền Mã Hóa</th>
            <th>Số Lượng</th>
            <th>Ngày Giao Dịch</th>
            <th>Phí Giao Dịch</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var giaoDich in Model)
        {
            <tr>
                <td>@giaoDich.TenNguoiGui</td>
                <td>@giaoDich.TenNguoiNhan</td>
                <td>@giaoDich.LoaiTienMaHoa</td>
                <td>@giaoDich.SoLuong</td>
                <td>@giaoDich.NgayGiaoDich.ToShortDateString()</td>
                <td>@giaoDich.PhiGiaoDich</td>
                <td>@giaoDich.TrangThai</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = giaoDich.ID })" class="btn btn-warning">Sửa</a>
                    <form method="post" action="@Url.Action("Delete", new { id = giaoDich.ID })" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Tạo Giao Dịch Mới</a>
